  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Launch Program",
      "env": {
        "COSMONAUT_USE_EMULATOR": "1"
      },
      "skipFiles": [
        "<node_internals>/**"
      ],
      "console": "integratedTerminal",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/jest",
      "runtimeArgs": ["--runInBand"]
    }
  ]
}
